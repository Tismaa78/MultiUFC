{% extends 'base.html.twig' %}

{% block title %}Mes articles - MMA & UFC{% endblock %}

{% block body %}
<div class="my-5">
    <h1 class="mb-4">Mes articles</h1>

    {% if posts is not empty %}
        <div class="row">
            {% for post in posts %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <img src="{{ post.featuredImages ?: 'https://via.placeholder.com/600x200' }}" class="card-img-top" alt="Image de l'article">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ post.title }}</h5>
                            <p class="card-text">{{ post.content[:100] ~ '...' }}</p>
                            <p class="text-muted small mb-2">
                                Publié le {{ post.createdAt|date('d/m/Y à H:i') }}
                            </p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a href="{{ path('app_post_edit', { id: post.id }) }}" class="btn btn-sm btn-warning">Modifier</a>
                                {{ include('post/_delete_form.html.twig', { post: post }) }}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center" role="alert">
            Tu n'as pas encore rédigé d'article.
        </div>
    {% endif %}
</div>
{% endblock %}
