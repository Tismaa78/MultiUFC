<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MMA & UFC Blog{% endblock %}</title>

    <!-- ✅ CDN de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {% block stylesheets %}{% endblock %}
</head>
<body class="bg-light">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">MMA & UFC</a>

            <!-- Bouton hamburger responsive -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <!-- ✅ Menu déroulant des catégories -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categorieDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Catégories
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categorieDropdown">
                            {% for categorie in categories %}
                                <li><a class="dropdown-item" href="{{ path('app_category_show', { id: categorie.id }) }}">{{ categorie.name }}</a></li>
                            {% else %}
                                <li><span class="dropdown-item text-muted">Aucune catégorie</span></li>
                            {% endfor %}
                        </ul>
                    </li>

                    {% if app.user %}
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                Bienvenue {{ app.user.nickname }}
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_post_my') }}">Mon compte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        {% block body %}{% endblock %}
    </main>

    <footer class="text-center mt-5 mb-3 text-muted">
        <hr>
        <p>&copy; {{ "now"|date("Y") }} - Projet MMA UFC Blog</p>
    </footer>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
